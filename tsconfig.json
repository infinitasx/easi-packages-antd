{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["packages/*", "src/*", "website/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "WebWorker"]
  },
  "include": ["packages/**/*.ts", "packages/**/*.tsx", "packages/**/*.vue", "typings/*"],
  "exclude": ["node_modules"]
}
